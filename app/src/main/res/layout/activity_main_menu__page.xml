    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu_Page">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/homebg_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/Logo_Keells"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/keells_super_logo_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/lb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="My Account"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Logo_Keells"
        app:layout_constraintTop_toTopOf="parent" />

    //Menu

    //Profile Edit
    <LinearLayout
        android:id="@+id/layout_btn1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Logo_Keells"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_editprofie"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Profile Edit"
            android:textSize="17dp"
            android:gravity="left"
            android:padding="12dp"
            android:background="#FFF"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/next_page_96px"/>

    </LinearLayout>

    //Shipping Details
    <LinearLayout
        android:id="@+id/layout_btn2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_btn1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_shippingdeatils"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Shipping Details"
            android:textSize="17dp"
            android:gravity="left"
            android:padding="12dp"
            android:background="#FFF"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/next_page_96px"/>

    </LinearLayout>

    //Change Password
    <LinearLayout
        android:id="@+id/layout_btn3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_btn2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_changepassword"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="17dp"
            android:background="#FFF"
            android:gravity="left"
            android:padding="12dp"
            />

        <ImageView
            android:layout_width="wrap_content"
